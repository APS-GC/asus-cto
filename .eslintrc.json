{
  "root": true,
  "extends": [
    "airbnb-base"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "allowImportExportEverywhere": true,
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "env": {
    "browser": true,
    "es2022": true
  },
  "plugins": [
    "xwalk"
  ],
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "always"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "prefer-destructuring": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "quotes": ["error", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "max-classes-per-file": "off",
    "no-use-before-define": "off",
    "no-return-assign": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-trailing-spaces": "off",
    "no-console": "off",
    "no-unreachable": "off",
    "operator-linebreak": "off",
    "arrow-parens": "off",
    "object-shorthand": "off",
    "default-param-last": "off",
    "no-undef": "off",
    "eol-last": "off",
    "comma-dangle": "off",
    "padded-blocks": "off",
    "no-multiple-empty-lines": "off",
    "comma-spacing": "off",
    "spaced-comment": "off",
    "prefer-template": "off",
    "indent": "off",
    "space-infix-ops": "off",
    "import/newline-after-import": "off",
    "import/no-import-module-exports": "off",
    "no-unused-vars": "off",
    "no-return-await": "off",
    "prefer-arrow-callback": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "prefer-const": "off",
    "key-spacing": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "webpack/",
    "scripts/dompurify.min.js"
  ]
}
